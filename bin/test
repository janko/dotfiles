#!/bin/bash

set -e

run_tests() {
  local test_command

  if [[ $1 =~ _spec.rb$ ]]; then

    test_command="rspec $1 --color"
    if [[ $2 =~ . ]]; then
      test_command="$test_command --line-number $2"
    fi

  elif [[ $1 =~ _test.rb$ ]]; then

    test_command="ruby $1"

  elif [[ $1 =~ .feature$ ]]; then

    test_command="cucumber $1 --color --no-source --require features"
    if [[ $2 =~ . ]]; then
      test_command="$test_command --lines $2"
    fi

  elif [[ $1 =~ spec(.js)?.coffee$ ]]; then

    test_command="jasmine-node $1 --coffee --color"

  else

    echo "Not a test file." 1>&2
    exit

  fi

  echo "$test_command"
  $test_command
}

run_tests $*
